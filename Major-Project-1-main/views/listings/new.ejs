<% layout("/layouts/boilerplate")%>
<div class="row"></div>
<div class="col-8 offset-2">
    <h2>Create New Listing</h2>
        <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data" >
            <div class="mb-3">
                <lable for="title" class="form-label">Title</lable>
                <input placeholder="enter title" name="listing[title]" type="text" class="form-control" required>
                <div class="valid-feedback">
                     Looks good!
                  </div>
            </div>

            <div class="mb-3">
                <lable for="description" class="form-label">Description</lable>
                <textarea name="listing[description]" class="form-control" required></textarea>
                <div class="invalid-feedback">
                    Enter a valid description
                  </div>
            </div>

            <div class="mb-3">
                <lable for="image" class="form-label">Upload Listing Image</lable>
                <input  name="listing[image]" type="file" class="form-control" required>
            </div>

            <div class="row">
            <div class="mb-3 col-md-4">
                <lable for="price" class="form-label">Price</lable>
                <input placeholder="enter price" name="listing[price]" class="form-control" required>
                <div class="invalid-feedback">
                    Enter a valid price
                  </div>
            </div>

            <div class="mb-3 col-md-8">
                    <lable for="location" class="form-label">Location</lable>
                    <input placeholder="enter location" name="listing[location]" type="text" class="form-control" required>
                    <div class="invalid-feedback">
                        Enter a valid location
                      </div>
            </div>
          </div>

            <div class="mb-3">
                <lable for="country" class="form-label">Country</lable>
                <input placeholder="enter country" name="listing[country]" type="text" class="form-control" required>
            </div> 
 
            <button class="btn mt-3 add-btn">Add</button>
            <br><br><br><br>
        </form>
    </div>
    </div>

