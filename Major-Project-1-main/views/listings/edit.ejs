<% layout("/layouts/boilerplate")%>

<div class="row mt-3">
<div class="col-8 offset-2">
    <h3>Edit your Listing</h3>
    <form method="POST" action="/listings/<%= listing._id%>?_method=PUT" enctype="multipart/form-data">

        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input value="<%= listing.title%>" name="listing[title]" type="text" class="form-control">
        </div>
        
        <div class="mb-3">
            <lable for="description" class="form-label">Description</lable>
            <textarea name="listing[description]" type="text" class="form-control"><%= listing.description%></textarea>
        </div>

        <div>
            Original Listing Image<br>
            <img src="<%=originalImageUrl%>"/>
        </div>
        
        <div class="mb-3">
            <lable for="image" class="form-label">Upload New Image</lable>
            <input value="<%= listing.image.url%>" name="listing[image]" type="file" class="form-control">
        </div>
        
        <div class="row">
            <div class="mb-3 col-md-4">
                <lable for="price" class="form-label">Price</lable>
                <input value="<%= listing.price%>" name="listing[price]" type="number" class="form-control">
            </div>

            <div class="mb-3 col-md-8">
                <lable for="location" class="form-label">Location</lable>
                <input value="<%= listing.location%>" name="listing[location]" type="text" class="form-control">
            </div>
       </div>

        <div class="mb-3">
            <lable for="country" class="form-label">Country</lable>
            <input value="<%= listing.country%>" name="listing[country]" type="text" class="form-control" >
        </div>

        <button class="btn btn-dark add-btn mt-3">Edit</button>
        <br><br><br><br>
     </form>
</div>
</div>
